<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    <style name="BitChat" parent="AppTheme"/>

    <style name="BitChat.Facebook">
        <item name="android:layout_width">@dimen/grid24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/grid0.5</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_height">@dimen/grid6</item>
        <item name="android:background">@drawable/states_button_facebook</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BitChat.Google">
        <item name="android:layout_width">@dimen/grid24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/grid0.5</item>
        <item name="android:textSize">@dimen/txt_size_m</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_height">@dimen/grid6</item>
        <item name="android:background">@drawable/states_button_google</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
